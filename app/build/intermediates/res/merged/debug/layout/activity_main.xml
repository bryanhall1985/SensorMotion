<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.bhapps.accspark.MainActivity">

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:id="@+id/userText" />

    <ToggleButton
        android:text="LockUser"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:id="@+id/lockUserButton" />

    <com.jjoe64.graphview.GraphView
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:id="@+id/graph"
        android:layout_below="@+id/lockUserButton"
        android:layout_alignParentStart="true"
        android:layout_marginTop="20dp" />

    <TextView
        android:text="Caminhada"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="29dp"
        android:id="@+id/textView"
        android:layout_below="@+id/graph"
        android:layout_alignParentStart="true"
        android:layout_marginTop="20dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView"
        android:layout_alignStart="@+id/textView"
        android:layout_marginTop="10dp"
        android:id="@+id/caminhadaText" />

    <TextView
        android:text="m"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/caminhadaText"
        android:layout_toEndOf="@+id/textView"
        android:id="@+id/textView4" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/textView4"
        android:layout_alignStart="@+id/textView2"
        android:id="@+id/saltosText" />

    <Button
        android:text="Job - Caminhada"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/caminhadaText"
        android:layout_alignStart="@+id/caminhadaText"
        android:layout_marginTop="26dp"
        android:id="@+id/sparkJobCaminhada" />

    <Button
        android:text="Job - Saltos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/sparkJobSaltos"
        android:layout_alignTop="@+id/sparkJobCaminhada"
        android:layout_toEndOf="@+id/sparkJobCaminhada"
        android:layout_marginStart="28dp" />

    <TextView
        android:text="Saltos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView2"
        android:layout_alignBaseline="@+id/textView"
        android:layout_alignBottom="@+id/textView"
        android:layout_alignStart="@+id/sparkJobSaltos" />

    <ToggleButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/sparkJobCaminhada"
        android:layout_marginTop="10dp"
        android:id="@+id/stopServiceButton"
        android:layout_alignEnd="@+id/sparkJobSaltos"
        android:layout_alignStart="@+id/sparkJobCaminhada" />


</RelativeLayout>
